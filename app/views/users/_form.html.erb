  <%= simple_form_for @user , data: { controller: "tab" }, url: :update_user do |f| %>
    <div class="tab-content">

    <div class="tab-pane active" id="dados">
    <div class="name d-flex justify-content-between">
    <%= f.input :first_name, label: "Nome",  required: true %>
    <%= f.input :last_name, label: "Sobrenome", required: true %>
    </div>
    <%= f.input :photo, label: "Foto do Perfil", as: :file %>
    <%= f.input :city, label: "Cidade", required: true %>
    <%= f.input :state, label: "Estado", required: true %>
    <%= f.input :phone, label: "Telefone", required: true %>
    <%= f.input :adopter, label: "Você deseja adotar?", input_html: { data: { action: "change->tab#checkAdopter", target: "tab.adopter" } } %>
    </div>

      <div class="tab-pane" id="preferencias" data-target="tab.preferencias">
        <p class="title text-center mt-0 mb-0">Ótimo! Como seria seu animal ideal?</p>
          <div class="name d-flex justify-content-between">
          <div class="col-3" >
            <%= f.input :age, label: "Idade", collection: ['Filhote', 'Adulto', 'Idoso'] %>
          </div>
          <div class="col-3 mx-1">
            <%= f.input :size, label: "Porte", collection: ['Pequeno', 'Médio', 'Grande'] %>
          </div>
          <div class="col-2.5">
            <%= f.input :gender, label: "Genero", collection: ['Macho', 'Femea'] %>
          </div>
          <div class="col-3.5  mx-1">
            <%= f.input :specie, label: "Especie", collection: ['Cachorro', 'Gato']%>
          </div>
        </div>


        <div class="name d-flex justify-content-between">
          <%= f.input :vaccination, label: "Vacinado?"%>
          <%= f.input :neutered, label: "Castrado?"%>
        </div>
      </div>
    </div>


    <%= f.button :submit, "Salvar", class:"btn-yellow" %>
    <%= link_to 'Voltar ao menu principal', user_path(@user), class: 'btn btn-dark-green' %>
  <% end %>
