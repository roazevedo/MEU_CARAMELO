  <body>

    <div class="page-container">
      <div id="content-wrap">
        <%= render "shared/navbar" %>
        <%= yield %>
      </div>
      <%= render "shared/footer" %>
    </div>

    <%= render "shared/flashes" %>
  </body>
</html>
