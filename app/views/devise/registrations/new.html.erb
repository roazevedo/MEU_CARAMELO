 <div class="container">
  <h2 class="title text-center mt-4 mb-0">Cadastre-se</h2>
  <div class="devise-card mt-4 mb-5 mx-auto">
    <%= simple_form_for @user , data: { controller: "tab" } do |f| %>
      <div class="tab-content">
        <div class="tab-pane active" id="dados">

          <%= f.input :first_name,
                      label: "Nome",
                      autofocus: true,
                      required: true, class:"first-name" %>
          <%= f.input :last_name, label: "Sobrenome", required: true, class:"last-name" %>

          <%= f.input :email,
                      required: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>

          <%= f.input :city, label: "Cidade", required: true %>
          <%= f.input :state, label: 'Estado', as: :select, collection: @states, placeholder: 'Selecione o Estado', include_blank: true, class:"state ms-3", required: true %>
          <%= f.input :phone, label: "Telefone", required: true %>
          <%= f.input :adopter, input_html: { data: { action: "change->tab#checkAdopter", target: "tab.adopter" } } %>
        </div>

        <div class="tab-pane" id="preferencias" data-target="tab.preferencias">
          <div class="name d-flex justify-content-between">
            <div class="col-3 mr-3">
              <%= f.input :age, label: "Idade", collection: ['Filhote', 'Adulto', 'Idoso'] %>
            </div>
            <div class="col-3 mr-3">
              <%= f.input :size, label: "Porte", collection: ['Pequeno', 'MÃ©dio', 'Grande'] %>
            </div>
            <div class="col-3 mr-3">
              <%= f.input :gender, label: "Genero", collection: ['Macho', 'Femea'] %>
            </div>
            <div class="col-3">
              <%= f.input :specie, label: "Especie", collection: ['Cachorro', 'Gato'] %>
            </div>
          </div>

          <div class="name d-flex justify-content-between">
            <%= f.input :vaccination, label: "Vacinado?" %>
            <%= f.input :neutered, label: "Castrado?" %>
          </div>
        </div>
      </div>
      <div class="container">
        <div class="form-actions">
          <%= f.button :submit, "Cadastrar", class: "btn-dark-green mb-1" %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>
 </div>
